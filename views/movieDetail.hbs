<div class="container">
    <div class="row">
        <div class="col-12">
            <div id="nav">
                <div class="nav__home"><a href="/" style="text-decoration: none; color: #000; font-size: 20px;">Home</a>
                </div>
                <form action="/search" method="get" style="margin: 0;">
                    <div class="nav__search">
                        <div class="input-group">
                            <input type="text" class="form-control" aria-label="Text input with dropdown button"
                                placeholder="Search here..." style="margin: 0;" name="search">
                            <select class="form-select" id="inputGroupSelect02" name="type">
                                <option value="name" selected>Tên phim</option>
                                <option value="genre">Thể loại phim</option>
                                <option value="cast">Diễn viên</option>
                            </select>
                        </div>
                        <button class="button" type="submit">Search</button>
                    </div>
                </form>
                <div class="d-flex">
                    <button type="button" class="btn btn-info me-2" data-bs-toggle="modal"
                        data-bs-target="#import">Import data</button>

                    <form action="/user/logout" method="post" style="margin: 0;">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Chào {{{name}}}
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                <li><a class="dropdown-item" href="/user/favorite">Danh sách phim yêu thích</a></li>
                                <li>
                                    <button class="dropdown-item" type="submit">Đăng xuất</button>
                                </li>
                            </ul>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="detail__item">
                <img src="{{movie.img}}" alt="{{movie.title}}" style="max-height: 500px;">
                <div class="detail">
                    <div class="detail__header">
                        <h2>{{{movie.title}}}</h2>
                    </div>
                    <div class="detail_desc">
                        <div style="display: flex; align-items: center; justify-content: space-between;">
                            <p><b>Year:</b> {{{movie.year}}}</p>
                            <form action="/user/favorite/{{movie.id}}" method="post">
                                {{#if IsFavorite}}
                                <button type="submit" class="btn btn-warning" name="status" value="false"> Bỏ yêu thích
                                    ❤</button>
                                {{else}}
                                <button type="submit" class="btn btn-danger" name="status" value="true"> Yêu thích
                                    ❤</button>
                                {{/if}}
                            </form>
                        </div>

                        <p><b>Genres:</b> {{{genre}}}</p>
                        <p><b>Rating:</b> {{{movie.rating}}}</p>
                        <p class="overflow-text"><b>Diễn viên:</b> {{#each movieCasts}} <a
                                href="/cast/{{cast_id}}">{{{cast_name}}}</a>,
                            {{/each}}
                        </p>
                    </div>
                </div>
            </div>

            <div class="film__component">
                <div class="film__header">
                    <div class="film__title">Reviews</div>
                    <input type="text" name="id" id="movie_id" value="{{movie.id}}" hidden>
                </div>
                <div class="film__list review__list">
                    {{!-- <a class="card" style="width: 45%; text-decoration: none; color: #000;" href="/movie/{{id}}">
                        <div class="card-body">
                            <h5 class="card-title">{{{author}}}</h5>
                            <p class="card-text">Ratings: {{{authorRating}}}/10</p>
                            <p class="card-text">{{{reviewText}}}</p>
                        </div>
                    </a> --}}
                </div>
                {{!-- <form action="/movie/{{movie.id}}" method="get"> --}}
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center pagination">
                            {{!-- <li class="page-item active"><button class="review__pagination page-link" type="button" name="page"
                                    value="{{this}}">{{{this}}}</button></li>
                            <li class="page-item"><button class="review__pagination page-link" type="button" name="page"
                                    value="{{this}}">{{{this}}}</button></li> --}}
                        </ul>
                    </nav>
                {{!-- </form> --}}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div id="footer">
                Developer: Nguyễn Văn Hào - 20120470 - HCMUS
            </div>
        </div>
    </div>
</div>